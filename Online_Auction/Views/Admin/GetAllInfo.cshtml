@{
    Layout = null;
}
@model Online_Auction.Models.GetAllInfoModel;
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css">

<link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">

<link rel="stylesheet" type="text/css" href="~/css/font-awesome.css">

<link rel="stylesheet" href="~/css/templatemo-hexashop.css">

<link rel="stylesheet" href="~/css/owl-carousel.css">

<link rel="stylesheet" href="~/css/lightbox.css">

<link rel="stylesheet" href="~/css/nav.css">
<style>
    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

    .side-img {
        overflow: hidden;
    }

    .des {
        font-size: 14px;
        line-height: 16px;
        margin-top: 7px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        word-wrap: break-word;
    }

    .list-group-item {
        position: relative;
        display: block;
        padding: 0;
        background-color: #fff;
        border: 1px solid rgba(0, 0, 0, .125);
    }

    .profile-img {
        width: 200px;
        height: 200px;
    }
</style>
<div class="container">
    <div class="main-body pt-5">
        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <div class="container-fluid">
                                <div class="row p-3">
                                    <h4>Profile Info :</h4>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card mb-3 mt-2">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.User.FullName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.User.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.User.number
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.User.Address
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <div class="container-fluid">
                                <div class="row p-3">
                                    <h4>Items For Sale :</h4>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                @if(Model.Items.Any()){
                    <div class="card mt-3">
                    @foreach (var Items in Model.Items)
                    {
                        <ul class="list-group list-group-flush" style="border-bottom:1px solid grey">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="container-fluid">
                                    <div class="row" style="height: 100px;">
                                        <div class="col-4 d-flex justify-content-center align-items-center"><img src="~/images/@Items.ProductImage" alt="" width="100px" height="100px" class="side-img"></div>
                                        <div class="col-6 mt-2">
                                            <h6 class="mb-0" style="color:black; font-weight:600;">@Items.ProductTitle</h6>
                                            <p class="des">@Items.ProductDescription</p>
                                        </div>
                                        <div class="col-2 p-0 d-flex justify-content-center align-items-center">
                                            <a asp-action="SingleProduct" asp-controller="Home" asp-route-id="@Items.ProductId">View</a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        }
                    </div>
                }
                else
                {
                    <h4>No Items For sale.</h4>
                }

            </div>
        </div>



        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <div class="container-fluid">
                                <div class="row p-3">
                                    <h4>Bid History :</h4>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card mb-3 mt-2">
                    <div class="card-body">
                        <table class="table table-hover">

                            @if (Model.Bids.Any())
                            {
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Product</th>
                                        <th>Bid Amount</th>
                                        <th>Time Stamp</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Bids)
                                    {
                                        <tr>
                                            <th><a asp-action="SingleProduct" asp-controller="Home" asp-route-id="@item.Products.ProductId" class="text-dark">@item.Products.ProductTitle</a></th>
                                            <td>@item.BidAmount</td>
                                            <td>@item.TimeStamp</td>
                                        </tr>
                                    }
                                </tbody>
                            }
                            else
                            {
                                <h4>No Bids yet.</h4>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <div class="container-fluid">
                                <div class="row p-3">
                                    <h4>All Reports :</h4>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card mb-3 mt-2">
                    <div class="card-body">
                        <table class="table table-hover">

                            @if (Model.reports.Any())
                            {
                                <thead class="thead-dark">
                                    <tr>
                                        <th>From User</th>
                                        <th>Report Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.reports)
                                    {
                                        <tr>
                                            <th>@item.fromuser.FullName</th>
                                            <td>@item.ReportMessage</td>
                                        </tr>
                                    }
                                </tbody>
                            }
                            else
                            {
                                <h4>No Reports</h4>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <div class="container-fluid">
                                <div class="row p-3">
                                    <h4>Items Bought :</h4>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card mb-3 mt-2">
                    <div class="card-body">
                        @if (Model.ItemBought.Any())
                        {
                            <div class="card mt-3">
                                @foreach (var Items in Model.ItemBought)
                                {
                                    <ul class="list-group list-group-flush" style="border-bottom:1px solid grey">
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <div class="container-fluid">
                                                <div class="row" style="height: 100px;">
                                                    <div class="col-4 d-flex justify-content-center align-items-center"><img src="~/images/@Items.ProductImage" alt="" width="100px" height="100px" class="side-img"></div>
                                                    <div class="col-6 mt-2">
                                                        <h6 class="mb-0" style="color:black; font-weight:600;">@Items.ProductTitle</h6>
                                                        <p class="des">@Items.ProductDescription</p>
                                                    </div>
                                                    <div class="col-2 p-0 d-flex justify-content-center align-items-center">
                                                        <a asp-action="SingleProduct" asp-controller="Home" asp-route-id="@Items.ProductId">View</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                }
                            </div>
                        }
                        else
                        {
                            <h4>No Items Bought.</h4>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


