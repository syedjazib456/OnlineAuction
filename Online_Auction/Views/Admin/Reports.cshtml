@{
}
@model IEnumerable<Online_Auction.Models.Report>;
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User Reports</h4>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            @if(Model.Any()){
                            <thead>
                                <tr style="background-color:#515763;">
                                    <th style="color:white;">ID</th>
                                    <th style="color:white;">Full Name</th>
                                    <th style="color:white;">Report Message</th>
                                    <th style="color:white;">From User</th>
                                    <th style="color:white;">To User</th>
                                    <th style="color:white;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var list in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x => list.ReportId)</td>
                                        <td>@Html.DisplayFor(x => list.Name)</td>
                                        <td>@Html.DisplayFor(x => list.ReportMessage)</td>
                                        <td><a asp-action="GetAllInfo" asp-controller="Admin" asp-route-id="@list.FromUserId">@Html.DisplayFor(x => list.fromuser.FullName)</a></td>
                                        <td><a asp-action="GetAllInfo" asp-controller="Admin" asp-route-id="@list.ToUserId">@Html.DisplayFor(x => list.touser.FullName)</a></td>
                                        <td>
                                            <a asp-action="ReportDone" asp-controller="Admin" asp-route-id="@list.ReportId" class="btn btn-success btn-sm">Done</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            }
                            else
                            {
                                <h5 class="text-center">No Reports yet.</h5>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>