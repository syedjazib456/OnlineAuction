@model IEnumerable<Online_Auction.Models.Products>;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">New Items</h4>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            @if(Model.Any()){
                            <thead>
                                <tr style="background-color:#515763;">
                                    <th style="color:white;">ID</th>
                                    <th style="color:white;">Titel</th>
                                    <th style="color:white;">Min Bid Price</th>
                                    <th style="color:white;">Auction End Date</th>
                                    <th style="color:white;">Category</th>
                                    <th style="color:white;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var list in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x=>list.ProductId)</td>
                                        <td>@Html.DisplayFor(x => list.ProductTitle)</td>
                                        <td>@Html.DisplayFor(x => list.MinBidPrice)</td>
                                        <td>@Html.DisplayFor(x => list.AuctionEndDate)</td>
                                        <td>@Html.DisplayFor(x => list.category.CatName)</td>
                                        <td>
                                            <a asp-action="ProductApprove" asp-route-id="@list.ProductId" type="button" class="btn btn-success btn-sm">Approve</a>
                                            <a asp-action="ProductReject" asp-route-id="@list.ProductId" type="button" class="btn btn-danger btn-sm">Reject</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            }
                            else
                            {
                                <h5 class="text-center">No New Items.</h5>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>