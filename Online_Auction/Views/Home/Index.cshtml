                        <div class="row">
                        @foreach (var catList in Model.CategoryWithCount)
                        {
                            if(catList.ProductCount > 0)
                            {
                                <div class="col-lg-4">
                                    <div class="right-first-image">
                                        <div class="thumb">
                                            <div class="tag">Items For Sale</div>
                                            <div class="inner-content">
                                                <h4>@Html.DisplayFor(x => catList.Category.CatName)</h4>
                                            </div>
                                            <div class="hover-content">
                                                <div class="inner">
                                                    <h4>@Html.DisplayFor(x => catList.Category.CatName)</h4>
                                                    <p>@Html.DisplayFor(x => catList.Category.CatDescription)</p>
                                                    <div class="main-border-button">
                                                        <a asp-action="CatItems" asp-controller="Home" asp-route-id="@catList.Category.CatId">discover more</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <img src="~/images/@Html.DisplayFor(x=>catList.Category.CatImg)">
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-4">
                                    <div class="right-first-image">
                                        <div class="thumb">
                                            <div class="inner-content">
                                                <h4>@Html.DisplayFor(x => catList.Category.CatName)</h4>
                                            </div>
                                            <div class="hover-content">
                                                <div class="inner">
                                                    <h4>@Html.DisplayFor(x => catList.Category.CatName)</h4>
