<style>
    .profile-picture-container {
        display: inline-block;
        position: relative;
        cursor: pointer;
        border: 1px solid hsl(230, 25%, 80%);
        border-radius: 50%;
        width: 150px;
        height: 150px; /* Set a fixed height for the container */
    }

    .profile-picture-input {
        display: none;
    }

    .profile-picture-preview {
        overflow: hidden;
        height: 100%; /* Set a fixed height for the preview */
    }

        .profile-picture-preview img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: contain;
        }

</style>
<body>

    <section class="section pt-5 pb-5">

    <div class="Login_form_div">
        @ViewData["ErrorMessage"];

        <form method="post" enctype="multipart/form-data" class="login__form">

            <h1 class="login__title">Sign Up</h1>
            <div class="login__group">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div>
                    <label for="profile-picture1" class="profile-picture-container">
                        <div class="profile-picture-preview">
                            <img id="profile-picture-preview1" src="~/images/profilepicturplaceholder.png" alt="Profile Picture">
                        </div>
                        <input type="file" asp-for="Input.ProfileImage" id="profile-picture1" class="profile-picture-input" accept="image/*">
                    </label>
                    <label class="login__label text-center">Profile Picture</label>
                </div>
                <div>
                    <label class="login__label">Full Name</label>
                    <input asp-for="Input.FullName" class="login__input" aria-required="true" placeholder="Full Name" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div>
                    <label class="login__label">Address</label>
                    <input asp-for="Input.Address" class="login__input" aria-required="true" placeholder="Home Address" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div>
                    <label class="login__label">Email</label>
                    <input asp-for="Input.Email" class="login__input" autocomplete="username" aria-required="true" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div>
                    <label class="login__label">Phone No.</label>
                    <input asp-for="Input.number" class="login__input" type="number" aria-required="true" placeholder="Phone Number" />
                    <span asp-validation-for="Input.number" class="text-danger"></span>
                </div>
                <div>
                    <label class="login__label">Password</label>
                    <input asp-for="Input.Password" class="login__input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <label class="login__label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="login__input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div hidden>
                    <select asp-for="Input.Role">
                        <option value="User" selected>User</option>
                    </select>
                </div>
            </div>
            <div>
                <p class="login__signup">
                    Already have an account? <a asp-area="Identity" asp-page="/Account/Login_Front">Login</a>
                </p>
                <button type="submit" class="login__button">Sign Up</button>
            </div>

        </form>

    </div>
    </section>


</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get references to the file input and image elements
        var fileInputs = document.querySelectorAll(".profile-picture-input");

        // Add event listener to each file input
        fileInputs.forEach(function (fileInput) {
            fileInput.addEventListener("change", function () {
                // Get the corresponding preview image element
                var previewImage = this.closest(".profile-picture-container").querySelector("img");

                // Check if any file is selected
                if (this.files && this.files[0]) {
                    var reader = new FileReader();

                    // Set up the FileReader to read the selected file
                    reader.onload = function (e) {
                        // Update the src attribute of the preview image with the data URL
                        previewImage.src = e.target.result;
                    }

                    // Read the selected file as a data URL
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    });
</script>
<script src="~/js/jquery-2.1.0.min.js"></script>

