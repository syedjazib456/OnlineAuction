@page
@model LoginModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<style>
    ul{
        list-style-type:none;
        padding:0;
        margin:0;
    }
</style>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-5 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo d-flex justify-content-center">
                                <img src="~/images/namewithlogo-removebg-preview.png" alt="logo" width="100">
                            </div>
                            <h6 class="font-weight-light text-center">Login to continue.</h6>
                            @if (TempData.ContainsKey("Message") && TempData["Message"] != null)
                            {
                                <div class="alert alert-danger text-center" role="alert" style="margin-bottom:0px;">
                                    @TempData["Message"]
                                </div>
                            }
                            <div asp-validation-summary="ModelOnly" style="margin-bottom:0px;" class="alert alert-danger p-2 d-flex justify-content-center align-items-center" role="alert"></div>

                            <form class="pt-3" id="account" method="post">
                                <div class="form-group">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="mt-3">
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">LOG IN</button>
                                </div>
                                <div class="my-2 d-flex justify-content-end align-items-center">
                                    <a href="#" class="auth-link text-black">Forgot password?</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Create</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
</body>

</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
