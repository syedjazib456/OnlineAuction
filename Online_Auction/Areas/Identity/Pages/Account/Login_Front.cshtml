@page
@model LoginModelFront

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css">

    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.css">

    <link rel="stylesheet" href="~/css/templatemo-hexashop.css">

    <link rel="stylesheet" href="~/css/owl-carousel.css">

    <link rel="stylesheet" href="~/css/lightbox.css">

    <link rel="stylesheet" href="~/css/nav.css">
    <style>
        .Login_form_div{
            height:100vh;
        }
    </style>
</head>

<body>
    <div class="Login_form_div">

        <form method="post" class="login__form">
            <h2 class="login__title">Log In</h2>
            @if (TempData.ContainsKey("Message") && TempData["Message"] != null)
            {
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;">
                    @TempData["Message"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" style="margin-bottom:0px;" class="alert alert-danger" role="alert"></div>
            <div class="login__group">
                <div>
                    <label for="email" class="login__label">Email</label>
                    <input asp-for="Input.Email" class="login__input" autocomplete="username" aria-required="true" placeholder="Email" />
                    <div style="text-align:start;">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <label for="password" class="login__label">Password</label>
                    <input asp-for="Input.Password" class="login__input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <div style="text-align:start;">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div>
                <p class="login__signup">
                    You do not have an account? <a asp-area="Identity" asp-page="/Account/Register_Front">Sign up</a>
                </p>
                <a href="#" class="login__forgot">
                    You forgot your password
                </a>
                <button type="submit" class="login__button">Log In</button>
            </div>

        </form>

    </div>


</body>
<script src="~/js/jquery-2.1.0.min.js"></script>

<!-- Bootstrap -->
<script src="~/js/popper.js"></script>
<script src="~/js/bootstrap.min.js"></script>

<!-- Plugins -->
<script src="~/js/owl-carousel.js"></script>
<script src="~/js/accordions.js"></script>
<script src="~/js/datepicker.js"></script>
<script src="~/js/scrollreveal.min.js"></script>
<script src="~/js/waypoints.min.js"></script>
<script src="~/js/jquery.counterup.min.js"></script>
<script src="~/js/imgfix.min.js"></script>
<script src="~/js/slick.js"></script>
<script src="~/js/lightbox.js"></script>
<script src="~/js/isotope.js"></script>

<!-- Global Init -->
<script src="~/js/custom.js"></script>
<script src="~/js/nav.js"></script>
</html>




